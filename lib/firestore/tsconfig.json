{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "compilerOptions": {
      "moduleResolution": "node",
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@echo/firestore/*": ["./src/*"],
      "@echo/firestore-mocks/*": ["./test/@mocks/*"],
      "@echo/firestore-test/*": ["./test/@utils/*"],
      "@echo/model/*": ["../model/src/*"],
      "@echo/model-mocks/*": ["../model/test/@mocks/*"],
      "@echo/utils/*": ["../utils/src/*"],
      "@echo/utils-test/*": ["../utils/test/@utils/*"]
    }
  },
  "include": ["src", "test", "../../env.d.ts"],
  "exclude": ["node_modules"]
}
