{
  "extends": "../tsconfig/base.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@echo/firestore/*": ["./src/*"],
      "@echo/firestore-mocks/*": ["./test/mocks/*"],
      "@echo/model/*": ["../model/src/*"],
      "@echo/model-mocks/*": ["../model/test/mocks/*"],
      "@echo/utils/*": ["../utils/src/*"],
      "@echo/test-utils/*": ["../utils/test/test-utils/*"],
      "@test-utils/*": ["./test/test-utils/*"]
    }
  },
  "include": ["src", "test", "utils"],
  "exclude": ["node_modules"]
}
