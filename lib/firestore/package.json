{
  "name": "@echo/firestore",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "license": "MIT",
  "scripts": {
    "db:add-collection:dev": "ts-node --project tsconfig.json utils/add-collection-dev.ts",
    "db:fix-addresses:dev": "ts-node --project tsconfig.json utils/fix-addresses-dev.ts",
    "db:reset:dev": "ts-node --project tsconfig.json utils/reset-db-dev.ts",
    "db:reset:test": "ts-node --project tsconfig.json utils/reset-db-test.ts",
    "lint": "eslint --fix -c .eslintrc.cjs --ext .ts .",
    "lint:ci": "eslint --quiet -c .eslintrc.cjs --ext .ts .",
    "lint:clean-cache": "rm -f .eslintcache",
    "modules:remove": "rm -rf node_modules",
    "modules:update": "ncu -u",
    "modules:update-minor": "ncu -u --target=minor",
    "prettier": "prettier -u --no-error-on-unmatched-pattern --write --cache .",
    "prettier:ci": "prettier -u --no-error-on-unmatched-pattern --log-level=silent -c  .",
    "test": "pnpm run db:reset:test && jest --runInBand",
    "test:ci": "pnpm run db:reset:test && jest --runInBand --ci --no-cache",
    "test:watch": "jest --watch",
    "tsc": "tsc --noEmit",
    "tsc:ci": "pnpm run tsc",
    "tsc:clean-cache": "rm -f tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@echo/model": "workspace:*",
    "@echo/utils": "workspace:*",
    "dayjs": "1.11.10",
    "firebase-admin": "12.0.0",
    "ramda": "0.29.1"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@jest/types": "29.6.3",
    "@types/ramda": "0.29.9",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0"
  }
}
