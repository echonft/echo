{
  "name": "@echo/firestore",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "license": "MIT",
  "scripts": {
    "db:reset:dev": "ts-node --project tsconfig.json utils/reset-db-dev.ts",
    "db:reset:test": "ts-node --project tsconfig.json utils/reset-db-test.ts",
    "lint": "eslint --cache --fix --ext .ts src/ && eslint --cache --fix --ext .ts test/",
    "lint:ci": "eslint --ext .ts src/ && eslint --ext .ts test/",
    "lint:clean-cache": "rm -f .eslintcache",
    "modules:remove-all": "rm -rf node_modules",
    "modules:update-all": "ncu -u",
    "modules:upgrade": "pnpm upgrade",
    "prettier": "prettier -u -c src/ && prettier -u -c test/",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "tsc": "tsc --noEmit",
    "tsc:clean-cache": "rm -f tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@auth/firebase-adapter": "1.0.0",
    "@echo/utils": "workspace:*",
    "dayjs": "1.11.9",
    "firebase-admin": "11.10.1",
    "ramda": "0.29.0",
    "viem": "1.12.2"
  },
  "devDependencies": {
    "@jest/globals": "29.6.2",
    "@jest/types": "29.6.1",
    "@types/node": "20.4.9",
    "@types/ramda": "0.29.5",
    "jest": "29.6.2",
    "jest-junit": "16.0.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.6"
  }
}
