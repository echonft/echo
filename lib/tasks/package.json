{
  "name": "@echo/tasks",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "command": "NODE_ENV=development tsx src/commands/index.ts",
    "firestore:migration": "LOG_LEVEL=info NODE_ENV=development tsx src/firestore-migrations/$MIGRATION.ts | pino-pretty -c",
    "lint": "eslint",
    "modules:remove": "rimraf node_modules",
    "modules:update": "ncu -u",
    "modules:update-minor": "ncu -u --target=minor",
    "prettier": "prettier . -u -c --no-error-on-unmatched-pattern --ignore-path ../../.prettierignore --config ../../prettier.config.js",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --ci --collectCoverage --reporters=default --reporters=jest-junit",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "ramda": "0.30.1"
  },
  "devDependencies": {
    "@babel/core": "7.25.2",
    "@babel/preset-env": "7.25.3",
    "@babel/preset-typescript": "7.24.7",
    "@echo/model": "workspace:*",
    "@echo/firestore": "workspace:*",
    "@echo/opensea": "workspace:*",
    "@echo/nft-scan": "workspace:*",
    "@echo/utils": "workspace:*",
    "@echo/web3": "workspace:*",
    "@inquirer/input": "2.2.9",
    "@inquirer/select": "2.4.7",
    "@jest/globals": "29.7.0",
    "@jest/types": "29.6.3",
    "@types/node": "22.1.0",
    "@types/ramda": "0.30.1",
    "@types/yargs": "17.0.33",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "pino-pretty": "11.2.2",
    "tsx": "4.16.5",
    "typescript": "5.5.4",
    "yargs": "17.7.2"
  }
}
