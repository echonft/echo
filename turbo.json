{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": ["CI", "ENV", "NODE_ENV", "NEXT_PUBLIC_IS_TESTNET"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:local": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "deploy": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "machine:restart": {
      "cache": false
    },
    "modules:remove": {
      "cache": false
    },
    "modules:update": {
      "cache": false
    },
    "modules:update-minor": {
      "cache": false
    },
    "prettier": {},
    "start": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["SECRET_MANAGER_EMAIL", "SECRET_MANAGER_PRIVATE_KEY"]
    },
    "start:local": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["SECRET_MANAGER_EMAIL", "SECRET_MANAGER_PRIVATE_KEY"]
    },
    "sentry:sourcemaps:inject": {
      "dependsOn": ["build"]
    },
    "sentry:sourcemaps:upload": {
      "dependsOn": ["sentry:sourcemaps:inject"]
    },
    "test:coverage:clean": {
      "cache": false
    },
    "test": {},
    "tsc": {}
  }
}
