{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "passThroughEnv": ["CI", "ENV", "NODE_ENV"]
    },
    "clean": {
      "cache": false
    },
    "deploy": {
      "cache": false,
      "passThroughEnv": ["ENV", "NEXT_PUBLIC_IS_TESTNET", "NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["ENV", "NEXT_PUBLIC_IS_TESTNET", "NODE_ENV"]
    },
    "env:pull": {
      "cache": false
    },
    "lint": {},
    "modules:remove": {
      "cache": false
    },
    "modules:update": {
      "cache": false
    },
    "modules:update-minor": {
      "cache": false
    },
    "prettier": {},
    "start": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["ENV", "NEXT_PUBLIC_IS_TESTNET", "NODE_ENV"]
    },
    "sentry:sourcemaps:inject": {
      "dependsOn": ["build"]
    },
    "sentry:sourcemaps:upload": {
      "dependsOn": ["sentry:sourcemaps:inject"]
    },
    "test:coverage:clean": {
      "cache": false
    },
    "test": {
      "passThroughEnv": ["CI", "ENV"]
    },
    "tsc": {},
    "//#firebase:use:dev": {
      "cache": false
    },
    "//#firebase:use:prod": {
      "cache": false
    },
    "//#firestore:functions:deploy:dev": {
      "dependsOn": ["//#firebase:use:dev"],
      "cache": false,
      "passThroughEnv": ["ENV", "NEXT_PUBLIC_IS_TESTNET"]
    },
    "//#firestore:functions:deploy:prod": {
      "dependsOn": ["//#firebase:use:prod"],
      "cache": false,
      "passThroughEnv": ["ENV", "NEXT_PUBLIC_IS_TESTNET"]
    },
    "//#firestore:indexes:deploy:dev": {
      "dependsOn": ["//#firebase:use:dev"],
      "cache": false
    },
    "//#firestore:indexes:deploy:prod": {
      "dependsOn": ["//#firebase:use:prod"],
      "cache": false
    },
    "//#firestore:indexes:pull:dev": {
      "dependsOn": ["//#firebase:use:dev"],
      "cache": false
    },
    "//#firestore:indexes:pull:prod": {
      "dependsOn": ["//#firebase:use:prod"],
      "cache": false
    }
  }
}
