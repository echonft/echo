{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "inputs": ["**/*.tsx", "**/*.ts", ".eslintrc.*"]
    },
    "lint:ci": {
      "cache": false
    },
    "lint:clean-cache": {
      "inputs": [".eslintcache"]
    },
    "modules:remove-all": {
      "cache": false
    },
    "modules:update-all": {
      "cache": false
    },
    "prettier": {
      "inputs": ["**/*.tsx", "**/*.ts"]
    },
    "start": {
      "dependsOn": ["build"],
      "outputs": [".next/**"]
    },
    "sentry:sourcemaps": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test": {
      "inputs": ["jest.config.*", "**/*.ts"]
    },
    "test:ci": {
      "cache": false
    },
    "test:watch": {
      "cache": false
    },
    "tsc": {
      "inputs": ["**/*.tsx", "**/*.ts", "tsconfig.json"]
    },
    "tsc:ci": {
      "cache": false
    },
    "tsc:clean-cache": {
      "inputs": ["tsconfig.tsbuildinfo"]
    },
    "@echo/firestore#db:add-collection:dev": {
      "cache": false
    },
    "@echo/firestore#db:fix-addresses:dev": {
      "cache": false
    },
    "@echo/firestore#db:reset:dev": {
      "cache": false
    },
    "@echo/firestore#db:reset:test": {
      "cache": false
    },
    "@echo/bot#start": {
      "dependsOn": ["@echo/bot#build"],
      "cache": false,
      "persistent": true
    },
    "@echo/frontend#build": {
      "dependsOn": ["@echo/ui#build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    },
    "@echo/helper#start": {
      "dependsOn": ["@echo/helper#build"],
      "cache": false,
      "persistent": true
    },
    "@echo/helper#update-db": {
      "dependsOn": ["@echo/helper#build"],
      "cache": false
    },
    "@echo/storybook#build": {
      "dependsOn": ["@echo/ui#build"],
      "outputs": ["storybook-static/**", "dist/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    },
    "@echo/storybook#dev": {
      "dependsOn": ["@echo/ui#build"],
      "cache": false,
      "persistent": true
    },
    "@echo/ui#build": {
      "outputs": ["dist/index.css"],
      "inputs": ["tailwind.config.cjs", "src/index.css", "src/**/*.tsx", "src/**/*.ts"]
    },
    "//#vercel:dev": {
      "dependsOn": ["@echo/ui#build"],
      "cache": false,
      "persistent": true
    }
  }
}
