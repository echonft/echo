{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"]
    },
    "lint": {
      "cache": false
    },
    "lint:clean-cache": {
      "cache": false
    },
    "ci:lint": {
      "cache": false
    },
    "ci:prettier": {
      "cache": false
    },
    "tsc": {
      "cache": false
    },
    "tsc:clean-cache": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "start": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"]
    },
    "start:dev": {
      "dependsOn": ["build"],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "remove-modules": {
      "cache": false
    },
    "update-modules": {
      "cache": false
    },
    "@echo/api#build": {
      "dependsOn": ["^build"],
      "env": ["NODE_ENV", "API_ENV", "IRON_PASSWORD"],
      "outputs": ["dist/**"]
    },
    "@echo/discord#build": {
      "dependsOn": ["^build"],
      "env": [
        "DISCORD_CLIENT_TOKEN",
        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "DISCORD_REDIRECT_URI",
        "DISCORD_GUILD_ID"
      ],
      "outputs": ["dist/**"]
    },
    "@echo/firebase-admin#build": {
      "dependsOn": ["^build"],
      "env": ["FIREBASE_SERVICE_ACCOUNT_PRIVATE_KEY"],
      "outputs": ["dist/**"]
    },
    "@echo/frontend#build": {
      "dependsOn": ["^build"],
      "env": [
        "NEXT_PUBLIC_TESTNET",
        "NEXT_PUBLIC_MOCK",
        "NEXT_PUBLIC_ALCHEMY_API_KEY",
        "NEXT_PUBLIC_ALCHEMY_TESTNET_API_KEY"
      ],
      "outputs": [".next/**", "dist/**"]
    },
    "@echo/utils#build": {
      "dependsOn": ["^build"],
      "env": ["NODE_ENV"],
      "outputs": ["dist/**"]
    },
    "@echo/bot#deploy-commands": {
      "dependsOn": ["build"],
      "outputs": ["dist/**"],
      "inputs": [".env"]
    }
  },
  "globalDependencies": ["tsconfig.json"]
}
