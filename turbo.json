{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["lint", "tsc", "clean"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:testnet": {
      "cache": false,
      "persistent": true
    },
    "env:pull": {
      "cache": false
    },
    "lint": {},
    "modules:remove": {},
    "modules:update": {},
    "modules:update-minor": {},
    "prettier": {},
    "start": {
      "dependsOn": ["build"],
      "persistent": true
    },
    "sentry:sourcemaps": {
      "dependsOn": ["build"]
    },
    "test": {},
    "tsc": {},
    "//#firebase:use:dev": {},
    "//#firebase:use:prod": {},
    "//#firestore:functions:deploy:dev": {
      "dependsOn": ["//#firebase:use:dev"]
    },
    "//#firestore:functions:deploy:prod": {
      "dependsOn": ["//#firebase:use:prod"]
    },
    "//#firestore:indexes:deploy": {},
    "//#firestore:indexes:deploy:dev": {
      "dependsOn": ["//#firebase:use:dev"]
    },
    "//#firestore:indexes:deploy:prod": {
      "dependsOn": ["//#firebase:use:prod"]
    },
    "//#firestore:indexes:pull": {},
    "//#firestore:indexes:pull:dev": {
      "dependsOn": ["//#firebase:use:dev"]
    },
    "//#firestore:indexes:pull:prod": {
      "dependsOn": ["//#firebase:use:prod"]
    }
  }
}
