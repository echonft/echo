{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "passThroughEnv": ["CI", "ENV"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "passThroughEnv": ["ENV", "LOG_LEVEL", "NODE_ENV", "NEXT_PUBLIC_IS_TESTNET"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": false
    },
    "modules:remove": {
      "cache": false
    },
    "modules:update": {
      "cache": false
    },
    "modules:update-minor": {
      "cache": false
    },
    "prettier": {
      "cache": false
    },
    "test": {
      "cache": false
    },
    "test:ci": {
      "cache": false
    },
    "tsc": {
      "cache": false
    }
  }
}
