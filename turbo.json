{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx"],
      "outputs": ["dist/**"]
    },
    "build:ci": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:testnet": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": false
    },
    "lint:ci": {
      "cache": false
    },
    "lint:clean-cache": {
      "inputs": [".eslintcache"]
    },
    "modules:remove": {
      "cache": false
    },
    "modules:update": {
      "cache": false
    },
    "modules:update-minor": {
      "cache": false
    },
    "prettier": {
      "cache": false
    },
    "start": {
      "dependsOn": ["build"],
      "persistent": true
    },
    "sentry:sourcemaps": {
      "dependsOn": ["build:ci"],
      "cache": false
    },
    "test": {
      "inputs": ["jest.config.*", "**/*.ts"]
    },
    "test:ci": {
      "cache": false
    },
    "test:watch": {
      "cache": false
    },
    "tsc": {
      "cache": false
    },
    "tsc:ci": {
      "cache": false
    },
    "tsc:clean-cache": {
      "inputs": ["tsconfig.tsbuildinfo"]
    },
    "@echo/firestore-functions#deploy:dev": {
      "dependsOn": ["use:dev"],
      "cache": false
    },
    "@echo/firestore-functions#serve:dev": {
      "dependsOn": ["use:dev", "build"],
      "cache": false
    },
    "@echo/firestore-functions#start:dev": {
      "dependsOn": ["use:dev", "build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.ts"]
    },
    "@echo/firestore-functions#use:dev": {
      "cache": false
    },
    "@echo/frontend#build": {
      "dependsOn": ["@echo/ui#build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    },
    "@echo/frontend#build:ci": {
      "dependsOn": ["@echo/ui#build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    },
    "@echo/storybook#build": {
      "dependsOn": ["@echo/ui#build"],
      "outputs": ["storybook-static/**", "dist/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts"]
    },
    "@echo/storybook#dev": {
      "dependsOn": ["@echo/ui#build"],
      "cache": false,
      "persistent": true
    },
    "@echo/ui#build": {
      "outputs": ["dist/index.css"],
      "inputs": ["tailwind.config.cjs", "src/index.css", "src/**/*.tsx", "src/**/*.ts"]
    },
    "//#vercel:cmd": {
      "dependsOn": ["@echo/ui#build"],
      "cache": false,
      "persistent": true
    }
  }
}
