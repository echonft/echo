{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "passThroughEnv": ["CI", "ENV", "NODE_ENV"]
    },
    "clean": {
      "cache": false
    },
    "deploy": {
      "cache": false,
      "passThroughEnv": ["ENV", "NEXT_PUBLIC_IS_TESTNET", "NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["ENV", "NEXT_PUBLIC_IS_TESTNET", "NODE_ENV"]
    },
    "lint": {},
    "modules:remove": {
      "cache": false
    },
    "modules:update": {
      "cache": false
    },
    "modules:update-minor": {
      "cache": false
    },
    "prettier": {},
    "start": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["ENV", "NEXT_PUBLIC_IS_TESTNET", "NODE_ENV"]
    },
    "sentry:sourcemaps:inject": {
      "dependsOn": ["build"]
    },
    "sentry:sourcemaps:upload": {
      "dependsOn": ["sentry:sourcemaps:inject"]
    },
    "test:coverage:clean": {
      "cache": false
    },
    "test": {
      "passThroughEnv": ["CI", "ENV"]
    },
    "tsc": {}
  }
}
