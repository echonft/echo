{
  "name": "@echo/bot",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "source .env.keys; dotenvx run --env-file=.env.dev -- tsx watch src/index.ts",
    "env:pull": "dotenvx hub pull",
    "lint": "eslint --fix -c .eslintrc.js --ext .ts .",
    "lint:ci": "eslint --quiet -c .eslintrc.js --ext .ts .",
    "lint:clean-cache": "rm -f .eslintcache",
    "modules:remove": "rm -rf node_modules",
    "modules:update": "ncu -u",
    "modules:update-minor": "ncu -u --target=minor",
    "prettier": "prettier -u --no-error-on-unmatched-pattern --write --cache .",
    "prettier:ci": "prettier -u --no-error-on-unmatched-pattern --log-level=silent -c .",
    "sentry:sourcemaps": "source .env.keys; dotenvx run --env-file=.env.sentry -- sentry-cli sourcemaps inject --org=echo-nft --project=bot dist/ && dotenvx run --env-file=.env.sentry -- sentry-cli sourcemaps upload --org=echo-nft --project=bot dist/",
    "start": "node dist/index.js",
    "start:dev": "source .env.keys; dotenvx run --env-file=.env.dev -- node dist/index.js",
    "test": "jest",
    "test:ci": "jest --ci --no-cache",
    "test:watch": "jest --watch",
    "tsc": "tsc --noEmit",
    "tsc:ci": "pnpm run tsc",
    "tsc:clean-cache": "rm -f tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "discord.js": "14.15.2",
    "i18next": "23.11.5",
    "ramda": "0.30.0"
  },
  "devDependencies": {
    "@babel/core": "7.24.6",
    "@babel/preset-env": "7.24.6",
    "@babel/preset-typescript": "7.24.6",
    "@dotenvx/dotenvx": "0.44.1",
    "@echo/api": "workspace:*",
    "@echo/firestore": "workspace:*",
    "@echo/model": "workspace:*",
    "@echo/utils": "workspace:*",
    "@jest/globals": "29.7.0",
    "@jest/types": "29.6.3",
    "@sentry/cli": "2.32.1",
    "@types/node": "20.12.12",
    "@types/ramda": "0.30.0",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "tsup": "8.0.2",
    "tsx": "4.11.2",
    "typescript": "5.4.5"
  }
}
