{
  "name": "@echo/bot",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "deploy:dev": ".fly/deploy.sh dev",
    "deploy:prod": ".fly/deploy.sh prod",
    "dev": "source .env.keys; dotenvx run --env-file=.env.dev -- tsx watch src/index.ts",
    "env:pull": "dotenvx hub pull",
    "lint": "eslint -c .eslintrc.js --ext .ts .",
    "modules:remove": "rm -rf node_modules",
    "modules:update": "ncu -u",
    "modules:update-minor": "ncu -u --target=minor",
    "prettier": "prettier . -u -c --no-error-on-unmatched-pattern",
    "sentry:sourcemaps:inject": "sentry-cli sourcemaps inject --org=echo-nft --project=bot dist/",
    "sentry:sourcemaps:upload": "sentry-cli sourcemaps upload --org=echo-nft --project=bot dist/",
    "start": "node dist/index.js",
    "test": "jest",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "@sentry/node": "8.7.0",
    "@sentry/profiling-node": "8.7.0",
    "discord.js": "14.15.3",
    "i18next": "23.11.5",
    "ramda": "0.30.1"
  },
  "devDependencies": {
    "@babel/core": "7.24.6",
    "@babel/preset-env": "7.24.6",
    "@babel/preset-typescript": "7.24.6",
    "@dotenvx/dotenvx": "0.44.1",
    "@echo/api": "workspace:*",
    "@echo/firestore": "workspace:*",
    "@echo/model": "workspace:*",
    "@echo/utils": "workspace:*",
    "@jest/globals": "29.7.0",
    "@jest/types": "29.6.3",
    "@sentry/cli": "2.32.1",
    "@types/node": "20.14.1",
    "@types/ramda": "0.30.0",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "tsup": "8.1.0",
    "tsx": "4.11.2",
    "typescript": "5.4.5"
  }
}
