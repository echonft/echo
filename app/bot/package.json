{
  "name": "@echo/bot",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "dev": "tsx watch src/index.ts | pino-pretty -c",
    "lint": "eslint",
    "modules:remove": "rimraf node_modules",
    "modules:update": "ncu -u",
    "modules:update-minor": "ncu -u --target=minor",
    "prettier": "prettier . -u -c --no-error-on-unmatched-pattern --ignore-path ../../.prettierignore --config ../../prettier.config.js",
    "sentry:sourcemaps:inject": "sentry-cli sourcemaps inject --org=echo-nft --project=bot dist/",
    "sentry:sourcemaps:upload": "sentry-cli sourcemaps upload --org=echo-nft --project=bot dist/",
    "start": "node dist/index.js",
    "test": "jest",
    "test:ci": "JEST_JUNIT_OUTPUT_DIR=test/.coverage jest --ci --collectCoverage --reporters=default --reporters=jest-junit",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "@sentry/node": "8.10.0",
    "@sentry/profiling-node": "8.10.0",
    "discord.js": "14.15.3",
    "i18next": "23.11.5",
    "ramda": "0.30.1"
  },
  "devDependencies": {
    "@babel/core": "7.24.7",
    "@babel/preset-env": "7.24.7",
    "@babel/preset-typescript": "7.24.7",
    "@echo/api": "workspace:*",
    "@echo/firestore": "workspace:*",
    "@echo/model": "workspace:*",
    "@echo/utils": "workspace:*",
    "@jest/globals": "29.7.0",
    "@jest/types": "29.6.3",
    "@sentry/cli": "2.32.1",
    "@types/node": "20.14.7",
    "@types/ramda": "0.30.0",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "tsup": "8.1.0",
    "tsx": "4.15.7",
    "typescript": "5.5.2"
  }
}
