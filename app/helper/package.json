{
  "name": "@echo/helper",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "dotenvx run --env-file=.env.dev -- tsup",
    "build:ci": "tsup",
    "clean": "rm -rf dist",
    "dev": "nodemon --watch \"src/**\" --watch \"../../lib/**/src/**\" --ext \"ts\" --exec \"dotenvx run --env-file=.env.dev -- ts-node --project tsconfig.json src/index.ts\"",
    "dev:testnet": "nodemon --watch \"src/**\" --watch \"../../lib/**/src/**\" --ext \"ts\" --exec \"dotenvx run --env-file=.env.testnet -- ts-node --project tsconfig.json src/index.ts\"",
    "lint": "eslint --fix -c .eslintrc.js --ext .ts .",
    "lint:ci": "eslint --quiet -c .eslintrc.js --ext .ts .",
    "lint:clean-cache": "rm -f .eslintcache",
    "modules:remove": "rm -rf node_modules",
    "modules:update": "ncu -u",
    "modules:update-minor": "ncu -u --target=minor",
    "prettier": "prettier -u --no-error-on-unmatched-pattern --write --cache .",
    "prettier:ci": "prettier -u --no-error-on-unmatched-pattern --log-level=silent -c .",
    "sentry:sourcemaps": "dotenvx run --env-file=.env.dev -- sentry-cli sourcemaps inject --org=echo-nft --project=helper dist/ && dotenvx run --env-file=.env.dev -- sentry-cli sourcemaps upload --org=echo-nft --project=helper dist/",
    "start": "node dist/index.js",
    "tsc": "tsc --noEmit",
    "tsc:ci": "pnpm run tsc",
    "tsc:clean-cache": "rm -f tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "ramda": "0.29.1"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "0.15.4",
    "@echo/firestore": "workspace:*",
    "@echo/sentry": "workspace:*",
    "@echo/utils": "workspace:*",
    "@echo/web3": "workspace:*",
    "@sentry/cli": "2.28.6",
    "@types/node": "20.11.19",
    "@types/ramda": "0.29.10",
    "nodemon": "3.0.3",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tsup": "8.0.2",
    "typescript": "5.3.3"
  }
}
