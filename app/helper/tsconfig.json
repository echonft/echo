{
  "extends": "../../lib/tsconfig/tsconfig.base.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@echo/helper/*": ["./src/*"],
      "@echo/model/*": ["../../lib/model/src/*"],
      "@echo/model-mocks/*": ["../../lib/model/test/mocks/*"],
      "@echo/firestore/*": ["../../lib/firestore/src/*"],
      "@echo/firestore-mocks/*": ["../../lib/firestore/test/mocks/*"],
      "@echo/utils/*": ["../../lib/utils/src/*"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["dist", "node_modules"]
}
