{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@echo/api/*": ["../../lib/api/src/*"],
      "@echo/firestore/*": ["../../lib/firestore/src/*"],
      "@echo/frontend/*": ["src/*"],
      "@echo/model/*": ["../../lib/model/src/*"],
      "@echo/ui/*": ["../../lib/ui/src/*"],
      "@echo/ui-css/*": ["../../lib/ui/dist/*"],
      "@echo/utils/*": ["../../lib/utils/src/*"],
      "@echo/web3/*": ["../../lib/web3/src/*"],
      "@echo/web3-dom/*": ["../../lib/web3-dom/src/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest"],
    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  },
  "include": ["src", "next-env.d.ts", ".next/types/**/*.ts", "test", "sentry.*.config.ts", "../../env.d.ts"],
  "exclude": ["node_modules", ".next"]
}
