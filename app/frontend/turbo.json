{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"],
      "passThroughEnv": [
        "AUTH_DISCORD_ID",
        "AUTH_DISCORD_SECRET",
        "AUTH_SECRET",
        "CI",
        "ENV",
        "NEXT_PUBLIC_IS_TESTNET",
        "NEXT_PUBLIC_VERCEL_URL",
        "SECRET_MANAGER_EMAIL",
        "SECRET_MANAGER_PRIVATE_KEY"
      ]
    },
    "dev": {
      "dependsOn": ["@echo/ui#build"],
      "cache": false,
      "persistent": true,
      "passThroughEnv": [
        "AUTH_DISCORD_ID",
        "AUTH_DISCORD_SECRET",
        "AUTH_SECRET",
        "ENV",
        "NEXT_PUBLIC_IS_TESTNET",
        "NODE_ENV",
        "SECRET_MANAGER_EMAIL",
        "SECRET_MANAGER_PRIVATE_KEY"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": [
        "AUTH_DISCORD_ID",
        "AUTH_DISCORD_SECRET",
        "AUTH_SECRET",
        "ENV",
        "NEXT_PUBLIC_IS_TESTNET",
        "NODE_ENV",
        "SECRET_MANAGER_EMAIL",
        "SECRET_MANAGER_PRIVATE_KEY"
      ]
    },
    "sentry:sourcemaps:inject": {
      "outputs": [".next/**", "!.next/cache/**"],
      "dependsOn": ["build"],
      "passThroughEnv": [
        "AUTH_DISCORD_ID",
        "AUTH_DISCORD_SECRET",
        "AUTH_SECRET",
        "ENV",
        "NEXT_PUBLIC_IS_TESTNET",
        "NODE_ENV",
        "SECRET_MANAGER_EMAIL",
        "SECRET_MANAGER_PRIVATE_KEY"
      ]
    },
    "sentry:sourcemaps:upload": {
      "dependsOn": ["sentry:sourcemaps:inject"],
      "passThroughEnv": [
        "AUTH_DISCORD_ID",
        "AUTH_DISCORD_SECRET",
        "AUTH_SECRET",
        "ENV",
        "NEXT_PUBLIC_IS_TESTNET",
        "NODE_ENV",
        "SECRET_MANAGER_EMAIL",
        "SECRET_MANAGER_PRIVATE_KEY"
      ]
    }
  }
}
