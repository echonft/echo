{
  "name": "echo",
  "version": "1.0.0",
  "repository": "git@github.com:echonft/echo.git",
  "license": "MIT",
  "private": true,
  "description": "A Discord bot that allows NFT swapping",
  "keywords": [
    "discord",
    "bot",
    "nft"
  ],
  "bugs": {
    "url": "https://github.com/echonft/echo/issues"
  },
  "homepage": "https://github.com/echonft/echo#readme",
  "lint-staged": {
    "*.(ts|tsx)": [
      "eslint --quiet --fix",
      "prettier -u --no-error-on-unmatched-pattern --write"
    ]
  },
  "scripts": {
    "bot:dev": "turbo dev --filter=@echo/bot",
    "bot:deploy:dev": "turbo deploy:dev --filter=@echo/bot",
    "bot:deploy:prod": "turbo deploy:prod --filter=@echo/bot",
    "bot:machine:restart:dev": "turbo machine:restart:dev --filter=@echo/bot",
    "bot:machine:restart:prod": "turbo machine:restart:prod --filter=@echo/bot",
    "command:list-collection-contracts": "turbo start --filter=@echo/commands -- -c=list-collection-contracts",
    "command:check-nft-approval": "turbo start --filter=@echo/commands -- -c=check-nft-approval",
    "command:clear-db": "turbo start --filter=@echo/commands -- -c=clear-db",
    "command:fetch-collection-from-opensea": "turbo start --filter=@echo/commands -- -c=fetch-collection-from-opensea",
    "command:fetch-collection-from-nftscan": "turbo start --filter=@echo/commands -- -c=fetch-collection-from-nftscan",
    "command:fetch-nfts-from-opensea": "turbo start --filter=@echo/commands -- -c=fetch-nfts-from-opensea",
    "command:fetch-nft-from-nftscan": "turbo start --filter=@echo/commands -- -c=fetch-nft-from-nftscan",
    "command:fetch-nfts-from-nftscan": "turbo start --filter=@echo/commands -- -c=fetch-nfts-from-nftscan",
    "command:fetch-nfts-with-collection-from-nftscan": "turbo start --filter=@echo/commands -- -c=fetch-nfts-with-collection-from-nftscan",
    "command:update-collection": "turbo start --filter=@echo/commands -- -c=update-collection",
    "command:update-nft": "turbo start --filter=@echo/commands -- -c=update-nft",
    "contract-listener:dev": "turbo dev --filter=@echo/contract-listener",
    "contract-listener:deploy:dev": "turbo deploy:dev --filter=@echo/contract-listener",
    "contract-listener:deploy:prod": "turbo deploy:prod --filter=@echo/contract-listener",
    "contract-listener:machine:restart:dev": "turbo machine:restart:dev --filter=@echo/bot",
    "contract-listener:machine:restart:prod": "turbo machine:restart:prod --filter=@echo/bot",
    "env:pull": "turbo env:pull",
    "firebase:use:dev": "firebase use dev",
    "firebase:use:prod": "firebase use prod",
    "firestore:functions:deploy:dev": "turbo deploy:dev artifacts:delete:dev --filter=@echo/firestore-functions --concurrency=1",
    "firestore:functions:deploy:prod": "turbo deploy:prod artifacts:delete:prod --filter=@echo/firestore-functions --concurrency=1",
    "firestore:indexes:deploy": "firebase deploy --only firestore:indexes",
    "firestore:indexes:deploy:dev": "turbo //#firestore:indexes:deploy",
    "firestore:indexes:deploy:prod": "turbo //#firestore:indexes:deploy",
    "firestore:indexes:pull": "firebase firestore:indexes > ../../firestore.indexes.json",
    "firestore:indexes:pull:dev": "turbo //#firestore:indexes:pull",
    "firestore:indexes:pull:prod": "turbo //#firestore:indexes:prod",
    "frontend:deploy": "vercel --prod && vercel promote echo-echonft.vercel.app",
    "frontend:dev": "turbo dev --filter=@echo/frontend --filter=@echo/ui",
    "lint": "turbo lint",
    "modules:remove": "turbo modules:remove; rm -rf node_modules; rm -rf pnpm-lock.yaml",
    "modules:update": "ncu -u --deep; turbo modules:update",
    "modules:update-minor": "ncu -u --deep --target=minor; turbo modules:update-minor",
    "prepare": "husky install",
    "prettier": "turbo prettier",
    "storybook:dev": "turbo dev --filter=@echo/storybook --filter=@echo/ui",
    "test": "turbo test",
    "test:coverage:clean": "turbo test:coverage:clean",
    "tsc": "turbo tsc"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "0.44.1",
    "@eslint/compat": "1.0.3",
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.4.0",
    "@types/eslint__eslintrc": "2.1.1",
    "@types/eslint__js": "8.42.3",
    "@types/node": "20.14.1",
    "eslint": "9.4.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-turbo": "2.0.1",
    "eslint-plugin-jest": "28.5.0",
    "eslint-plugin-prettier": "5.1.3",
    "firebase-tools": "13.10.2",
    "husky": "9.0.11",
    "lint-staged": "15.2.5",
    "next": "14.2.3",
    "npm-check-updates": "16.14.20",
    "prettier": "3.3.0",
    "turbo": "2.0.1",
    "typescript": "5.4.5",
    "typescript-eslint": "7.12.0",
    "vercel": "34.2.4"
  },
  "packageManager": "pnpm@9.2.0",
  "engines": {
    "node": "20.x"
  },
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold": 0,
    "showDetails": true
  }
}
