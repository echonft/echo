{
  "name": "echo",
  "repository": "git@github.com:echonft/echo.git",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "private": true,
  "lint-staged": {
    "*.(ts|tsx)": [
      "eslint --quiet --fix",
      "prettier -u --no-error-on-unmatched-pattern --write"
    ]
  },
  "scripts": {
    "bot:dev": "NODE_ENV=development ENV=development NEXT_PUBLIC_IS_TESTNET=1 turbo dev --filter=@echo/bot",
    "bot:deploy": "scripts/bot/deploy.sh",
    "bot:machine:restart:dev": "ENV=development turbo machine:restart --filter=@echo/bot",
    "bot:machine:restart:prod": "ENV=production turbo machine:restart --filter=@echo/bot",
    "command:clear-db": "ENV=development turbo start --filter=@echo/commands -- -c=clear-db",
    "command:fetch-collection": "ENV=development turbo start --filter=@echo/commands -- -c=fetch-collection",
    "command:fetch-nft": "ENV=development turbo start --filter=@echo/commands -- -c=fetch-nft",
    "command:fetch-nfts": "ENV=development turbo start --filter=@echo/commands -- -c=fetch-nfts",
    "command:update-collection": "ENV=development turbo start --filter=@echo/commands -- -c=update-collection",
    "command:update-nft": "ENV=development turbo start --filter=@echo/commands -- -c=update-nft",
    "command:update-users-nfts": "ENV=staging turbo start --filter=@echo/commands",
    "firestore:functions:deploy:dev": "ENV=development turbo deploy --filter=@echo/firestore-functions && ENV=development turbo artifacts:delete --filter=@echo/firestore-functions",
    "firestore:functions:deploy:prod": "ENV=production turbo deploy --filter=@echo/firestore-functions && ENV=production turbo artifacts:delete --filter=@echo/firestore-functions",
    "firestore:functions:deploy:staging": "ENV=staging turbo deploy --filter=@echo/firestore-functions && ENV=staging turbo artifacts:delete --filter=@echo/firestore-functions",
    "firestore:indexes:deploy": "firebase deploy --only firestore:indexes",
    "firestore:indexes:pull": "firebase firestore:indexes > ../../firestore.indexes.json",
    "firestore:mirror:staging": "lib/firestore/scripts/mirror-staging.sh",
    "frontend": "scripts/frontend/action.sh",
    "frontend:deploy": "scripts/frontend/deploy.sh",
    "frontend:dev": "scripts/frontend/dev.sh",
    "lint": "turbo lint",
    "lint-staged": "NODE_OPTIONS='--max_old_space_size=8192' lint-staged",
    "modules:remove": "turbo modules:remove; rm -rf node_modules; rm -rf pnpm-lock.yaml",
    "modules:update": "ncu -u --deep; turbo modules:update",
    "modules:update-minor": "ncu -u --deep --target=minor; turbo modules:update-minor",
    "prepare": "husky install",
    "prettier": "turbo prettier",
    "storybook:dev": "turbo dev --filter=@echo/storybook --filter=@echo/ui",
    "test": "turbo test",
    "test:coverage:clean": "turbo test:coverage:clean",
    "tsc": "turbo tsc"
  },
  "devDependencies": {
    "@eslint/compat": "1.1.0",
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.5.0",
    "@next/eslint-plugin-next": "14.2.4",
    "@storybook/eslint-config-storybook": "4.0.0",
    "@types/eslint__eslintrc": "2.1.1",
    "@types/eslint__js": "8.42.3",
    "@types/node": "20.14.7",
    "eslint": "9.5.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-turbo": "2.0.4",
    "eslint-config-google": "0.14.0",
    "eslint-plugin-jest": "28.6.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.3",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-storybook": "0.8.0",
    "firebase-tools": "13.11.3",
    "globals": "15.6.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.7",
    "next": "14.2.4",
    "npm-check-updates": "16.14.20",
    "prettier": "3.3.2",
    "turbo": "2.0.4",
    "typescript": "5.5.2",
    "typescript-eslint": "7.13.1",
    "vercel": "34.2.7"
  },
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "node": "20.x"
  },
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold": 0,
    "showDetails": true
  }
}
