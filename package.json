{
  "name": "echo",
  "version": "1.0.0",
  "repository": "git@github.com:echonft/echo.git",
  "license": "MIT",
  "private": true,
  "description": "A Discord bot that allows NFT swapping",
  "keywords": [
    "discord",
    "bot",
    "nft"
  ],
  "bugs": {
    "url": "https://github.com/echonft/echo/issues"
  },
  "homepage": "https://github.com/echonft/echo#readme",
  "lint-staged": {
    "*.(ts|tsx)": [
      "eslint --quiet --fix",
      "prettier -u --no-error-on-unmatched-pattern --write"
    ]
  },
  "scripts": {
    "bot:dev": "turbo run dev --filter=@echo/bot",
    "bot:deploy": "flyctl deploy --local-only --update-only --config app/bot/.fly/fly.toml --dockerfile bot.Dockerfile",
    "bot:deploy:dev": "flyctl deploy --local-only --update-only --config app/bot/.fly/fly.dev.toml --dockerfile bot.Dockerfile",
    "build": "turbo run build",
    "check": "turbo run tsc --force && turbo run lint --force && turbo run test --force",
    "check:quick": "turbo run tsc --force && turbo run lint --force && turbo run test --filter=!@echo/firestore --force",
    "clean": "turbo run clean",
    "contract-listener:dev": "turbo run dev --filter=@echo/contract-listener",
    "contract-listener:deploy": "flyctl deploy --local-only --update-only --config=app/contract-listener/.fly/fly.toml --dockerfile=contract-listener.Dockerfile",
    "contract-listener:deploy:dev": "flyctl deploy --local-only --update-only --config=app/contract-listener/.fly/fly.dev.toml --dockerfile=contract-listener.Dockerfile",
    "env:pull": "turbo run env:pull",
    "firestore:functions:deploy": "turbo run deploy --filter=@echo/firestore-functions",
    "firestore:functions:deploy:dev": "turbo run deploy:dev --filter=@echo/firestore-functions",
    "firestore:functions:deploy:testnet": "turbo run deploy:testnet --filter=@echo/firestore-functions",
    "firestore:indexes:deploy": "firebase deploy --only firestore:indexes",
    "firestore:indexes:pull": "firebase firestore:indexes > ../../firestore.indexes.json",
    "frontend:dev": "turbo run dev --filter=@echo/frontend --filter=@echo/ui",
    "lint": "turbo run lint",
    "lint:ci": "turbo run lint:ci",
    "lint:clean-cache": "rm -f .eslintcache && turbo run lint:clean-cache",
    "modules:remove": "turbo run modules:remove; rm -rf node_modules; rm -rf pnpm-lock.yaml",
    "modules:update": "ncu -u --deep",
    "modules:update-minor": "ncu -u --deep --target=minor",
    "prepare": "husky install",
    "prettier": "turbo run prettier",
    "prettier:ci": "turbo run prettier:ci",
    "storybook:dev": "turbo run dev --filter=@echo/storybook --filter=@echo/ui",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "test:watch": "turbo run test:watch",
    "tsc": "turbo run tsc",
    "tsc:ci": "turbo run tsc:ci",
    "tsc:clean-cache": "rm -f tsconfig.tsbuildinfo && turbo run tsc:clean-cache"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "0.44.1",
    "@next/eslint-plugin-next": "14.2.3",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.11.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-turbo": "1.13.3",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-react": "7.34.2",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-simple-import-sort": "12.1.0",
    "firebase-tools": "13.10.2",
    "husky": "9.0.11",
    "lint-staged": "15.2.5",
    "next": "14.2.3",
    "npm-check-updates": "16.14.20",
    "prettier": "3.2.5",
    "turbo": "1.13.3",
    "typescript": "5.4.5",
    "vercel": "34.2.4"
  },
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold": 0,
    "showDetails": true
  }
}
