{
  "name": "echo",
  "version": "1.0.0",
  "repository": "git@github.com:echonft/echo.git",
  "license": "MIT",
  "private": true,
  "description": "A Discord bot that allows NFT swapping",
  "keywords": [
    "discord",
    "bot",
    "nft"
  ],
  "bugs": {
    "url": "https://github.com/echonft/echo/issues"
  },
  "homepage": "https://github.com/echonft/echo#readme",
  "lint-staged": {
    "*.(ts|tsx)": [
      "eslint --quiet --fix",
      "prettier -u --no-error-on-unmatched-pattern --write"
    ]
  },
  "scripts": {
    "bot:dev": "turbo run dev --filter=@echo/bot",
    "bot:dev:testnet": "turbo run dev:testnet --filter=@echo/bot",
    "bot:deploy:dev": "flyctl deploy --local-only --update-only --config app/bot/.fly/fly.dev.toml --dockerfile Dockerfile",
    "bot:deploy:testnet": "flyctl deploy --local-only --update-only --config app/bot/.fly/fly.testnet.toml --dockerfile Dockerfile",
    "check": "turbo run tsc --force && turbo run lint --force && turbo run test --force",
    "check:quick": "turbo run tsc --force && turbo run lint --force && turbo run test --filter=!@echo/firestore --force",
    "clean": "turbo run clean",
    "firestore-functions:deploy:dev": "turbo run deploy:dev --filter=@echo/firestore-functions",
    "firestore-functions:deploy:testnet": "turbo run deploy:testnet --filter=@echo/firestore-functions",
    "frontend:dev": "turbo run dev --filter=@echo/frontend --filter=@echo/ui",
    "frontend:dev:testnet": "turbo run dev:testnet --filter=@echo/frontend dev --filter=@echo/ui",
    "frontend:deploy:testnet": "git rebase main testnet && git push origin testnet",
    "knip": "knip",
    "lint": "turbo run lint",
    "lint:ci": "turbo run lint:ci",
    "lint:clean-cache": "rm -f .eslintcache && turbo run lint:clean-cache",
    "modules:remove": "turbo run modules:remove; rm -rf node_modules; rm -rf pnpm-lock.yaml",
    "modules:update": "ncu -u --deep",
    "modules:update-minor": "ncu -u --deep --target=minor",
    "prepare": "husky install",
    "prettier": "turbo run prettier",
    "prettier:ci": "turbo run prettier:ci",
    "storybook:dev": "turbo run dev --filter=@echo/storybook --filter=@echo/ui",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "test:watch": "turbo run test:watch",
    "tsc": "turbo run tsc",
    "tsc:ci": "turbo run tsc:ci",
    "tsc:clean-cache": "rm -f tsconfig.tsbuildinfo && turbo run tsc:clean-cache"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "14.1.4",
    "@typescript-eslint/eslint-plugin": "7.5.0",
    "@typescript-eslint/parser": "7.5.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.1.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-turbo": "1.13.2",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "12.0.0",
    "firebase-tools": "13.6.0",
    "husky": "9.0.11",
    "knip": "5.7.0",
    "lint-staged": "15.2.2",
    "npm-check-updates": "16.14.18",
    "prettier": "3.2.5",
    "turbo": "1.13.2",
    "typescript": "5.4.3"
  },
  "pnpm": {
    "overrides": {
      "@auth/core": "0.28.0",
      "viem": "2.8.16"
    }
  },
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold": 0,
    "showDetails": true
  }
}
