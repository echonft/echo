{
  "name": "echo",
  "repository": "git@github.com:echonft/echo.git",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "private": true,
  "lint-staged": {
    "*.(ts|tsx)": [
      "eslint --quiet --fix",
      "prettier -u --no-error-on-unmatched-pattern --write"
    ]
  },
  "scripts": {
    "bot": "scripts/bot/action.sh",
    "commands": "scripts/commands/action.sh",
    "dep": "scripts/deploy/deploy.sh",
    "dev:bot": "scripts/bot/dev.sh",
    "dev:frontend": "scripts/frontend/dev.sh",
    "dev:storybook": "turbo dev --filter=@echo/storybook --filter=@echo/ui",
    "firestore": "scripts/firestore/action.sh",
    "frontend": "scripts/frontend/action.sh",
    "lint": "turbo lint",
    "lint-staged": "NODE_OPTIONS='--max_old_space_size=8192' lint-staged",
    "modules:remove": "turbo modules:remove; rimraf node_modules pnpm-lock.yaml",
    "modules:update": "ncu -u --deep; turbo modules:update",
    "modules:update-minor": "ncu -u --deep --target=minor; turbo modules:update-minor",
    "prettier": "turbo prettier",
    "test": "turbo test",
    "tsc": "turbo tsc",
    "vercel:actions": "scripts/vercel/action.sh"
  },
  "devDependencies": {
    "@eslint/compat": "1.2.3",
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "9.15.0",
    "@next/eslint-plugin-next": "15.0.3",
    "@storybook/eslint-config-storybook": "4.0.0",
    "@types/eslint__eslintrc": "2.1.2",
    "@types/eslint__js": "8.42.3",
    "@types/node": "22.9.0",
    "eslint": "9.15.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-turbo": "2.3.0",
    "eslint-config-google": "0.14.0",
    "eslint-plugin-jest": "28.9.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "5.0.0",
    "eslint-plugin-storybook": "0.11.1",
    "firebase-tools": "13.25.0",
    "globals": "15.12.0",
    "husky": "9.1.7",
    "lint-staged": "15.2.10",
    "next": "14.2.18",
    "npm-check-updates": "17.1.11",
    "pino": "9.5.0",
    "pino-pretty": "11.3.0",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "turbo": "2.3.0",
    "typescript": "5.6.3",
    "typescript-eslint": "8.15.0",
    "vercel": "37.14.0"
  },
  "packageManager": "pnpm@9.13.2",
  "engines": {
    "node": "20.x"
  },
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold": 0,
    "showDetails": true
  }
}
