{
  "name": "echo",
  "version": "1.0.0",
  "repository": "git@github.com:echonft/echo.git",
  "license": "MIT",
  "private": true,
  "description": "A Discord bot that allows NFT swapping",
  "keywords": [
    "discord",
    "bot",
    "nft"
  ],
  "bugs": {
    "url": "https://github.com/echonft/echo/issues"
  },
  "homepage": "https://github.com/echonft/echo#readme",
  "lint-staged": {
    "*.(ts|tsx)": [
      "eslint --fix",
      "prettier -u --no-error-on-unmatched-pattern --write --cache"
    ]
  },
  "scripts": {
    "bot:dev": "env-cmd -f .env turbo run dev --filter=@echo/bot",
    "bot:start": "turbo run start --filter=@echo/bot",
    "check": "turbo run tsc --force && turbo run lint --force && turbo run test --force",
    "check:quick": "turbo run tsc --force && turbo run lint --force && turbo run test --filter=!@echo/firestore --force",
    "clean": "turbo run clean",
    "db:add-collection:dev": "env-cmd -f .env turbo run db:add-collection:dev --filter=@echo/firestore",
    "db:fix-addresses:dev": "env-cmd -f .env turbo run db:fix-addresses:dev --filter=@echo/firestore",
    "db:reset:dev": "env-cmd -f .env turbo run db:reset:dev --filter=@echo/firestore",
    "db:reset:test": "turbo run db:reset:test --filter=@echo/firestore",
    "frontend:build": "turbo run build --filter=@echo/frontend",
    "frontend:clean": "turbo run clean --filter=@echo/frontend",
    "helper:dev": "env-cmd -f .env turbo run dev --filter=@echo/helper",
    "helper:start": "turbo run start --filter=@echo/helper",
    "helper:update-db": "env-cmd -f .env turbo run update-db --filter=@echo/helper",
    "lint": "turbo run lint",
    "lint:ci": "turbo run lint:ci",
    "lint:clean-cache": "rm -f .eslintcache && turbo run lint:clean-cache",
    "modules:remove": "turbo run modules:remove; rm -rf node_modules; rm -rf pnpm-lock.yaml",
    "modules:update": "ncu -u --deep",
    "modules:update-minor": "ncu -u --deep --target=minor",
    "prepare": "husky install",
    "prettier": "turbo run prettier",
    "storybook:build": "turbo run build --filter=@echo/storybook",
    "storybook:dev": "turbo run dev --filter=@echo/storybook --filter=@echo/ui",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "test:watch": "turbo run test:watch",
    "tsc": "turbo run tsc",
    "tsc:ci": "turbo run tsc:ci",
    "tsc:clean-cache": "rm -f tsconfig.tsbuildinfo && turbo run tsc:clean-cache",
    "turbo:update": "pnpm dlx @turbo/codemod update",
    "vercel": "turbo run //#vercel:dev dev --filter=@echo/ui",
    "vercel:dev": "vercel dev"
  },
  "devDependencies": {
    "@babel/core": "7.23.7",
    "@babel/preset-env": "7.23.8",
    "@babel/preset-react": "7.23.3",
    "@babel/preset-typescript": "7.23.3",
    "@next/eslint-plugin-next": "14.0.4",
    "@types/node": "20.11.0",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "babel-jest": "29.7.0",
    "env-cmd": "10.1.0",
    "eslint": "8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-turbo": "1.11.3",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "npm-check-updates": "16.14.12",
    "prettier": "3.2.1",
    "turbo": "1.11.3",
    "typescript": "5.3.3",
    "vercel": "33.1.0"
  },
  "pnpm": {
    "overrides": {
      "@auth/core": "0.20.0"
    }
  },
  "packageManager": "pnpm@8.14.1",
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold": 0,
    "showDetails": true
  }
}
